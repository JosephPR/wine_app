<% if @varietal.errors%>
  <% @varietal.errors.full_messages.each do |message|  %>
    <p><%= message %></p>
  <% end %>
<% end %>

<%= form_for @varietal  do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= label_tag "Category" %>
  <%= f.collection_select :category_id, @categories, :id, :name  %>
  <%= f.submit "Add Varietal"  %>
<% end %>
